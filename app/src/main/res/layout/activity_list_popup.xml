<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    android:layout_gravity="center"
    tools:context="network.virus.behero_android.ListPopupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cacaca">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="15dp"
            android:layout_height="40dp"
            android:background="#00d66e" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#666666"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:text="아동"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:layout_below="@+id/textView9"
            android:layout_marginTop="11dp"
            android:src="@drawable/jooe2">


        </ImageView>

        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/imageView"
            android:layout_toEndOf="@+id/textView9"
            android:layout_toRightOf="@+id/textView9"
            android:text="발생장소" />

        <TextView
            android:id="@+id/pl_txt"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/place"
            android:layout_centerHorizontal="true"
            android:background="@drawable/white_btn"
            android:padding="5dp"
            android:text="대전광역시 서구 도마동 27341" />
        <TextView
            android:id="@+id/feather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/pl_txt"
            android:layout_toEndOf="@+id/textView9"
            android:layout_toRightOf="@+id/textView9"
            android:text="신체특징" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/feather"
            android:layout_centerHorizontal="true"
            android:background="@drawable/white_btn"
            android:padding="5dp"
            android:text="이마에 큰 점이 있음" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/feather"
            android:layout_toRightOf="@+id/feather"
            android:background="@drawable/blue_btn"
            android:text="제보"
            android:textColor="#ffffff"
            android:id="@+id/button4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/button4"
            android:layout_toRightOf="@+id/button4"
            android:background="@drawable/blue_btn"
            android:text="재알림"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/textLine"
            android:layout_width="250dp"
            android:layout_height="120dp"
            android:background="@drawable/white_btn"
            android:layout_alignEnd="@+id/pl_txt"
            android:layout_alignRight="@+id/pl_txt"
            android:layout_alignTop="@+id/imageView"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="이름 : 이주원\n성별 : 여자\n당시나이 : 20\n현재 나이 : 20\n발생일자 : 1999-8-18"

            android:maxLines="5" />

    </RelativeLayout>

</LinearLayout>

