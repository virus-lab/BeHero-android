                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="20" />
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>

